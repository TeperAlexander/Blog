@model PostRequest


<form asp-controller="Post" asp-action="@ViewData["Action"]" method="post">
    <div class="form-group">
        <label asp-for="@Model.Title">Title</label>
        <input type="text" asp-for="@Model.Title" value="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" asp-for="@Model.Description" value="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@ViewData["Action"]</button>
    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
</form>